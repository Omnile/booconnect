{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "ovac/laravel-hubtel-sms",
                "version": "1.0.0",
                "source": {
                    "url": "https://github.com/ovac/hubtel-laravel-sms-channel.git",
                    "type": "git",
                    "reference": "355726e"
                }
            }
        }
    ],

    "require": {
        "php": "^7.1.3",
        "fideloper/proxy": "~4.0",
        "gloudemans/shoppingcart": "^2.5",
        "laravel/framework": "5.6.*",
        "laravel/tinker": "~1.0",
        "mpociot/laravel-apidoc-generator": "dev-master",
        "ovac/laravel-hubtel-payment": "^1.0",
        "ovac/laravel-hubtel-sms": "~1.0"
    },
    "require-dev": {
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "laravel/dusk": "^3.0",
        "mockery/mockery": "~1.0",
        "nunomaduro/collision": "~1.1",
        "phpunit/phpunit": "~7.0",
        "symfony/thanks": "~1.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/",
            "NotificationChannels\\Hubtel\\": "vendor/norris1z/hubtel-laravel-sms-channel/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "test": [
            "phpunit",
            "@php artisan dusk"
        ],
        "document": [
            "php artisan api:generate --routePrefix='api/v1/*' --header='Authorization: Bearer eyJ0eXAiOiJKV1QiLCJhbGciOiJSUzI1NiIsImp0aSI6IjBmNWRhOGM4ZDg1Y2Q3OTcwNTM' --force"
        ],
        "dploy": [
            "php artisan migrate:refresh --seed",
            "rm -rf public/docs",
            "git clone http://github.com/omnile/boodoc.git/ public/docs",
            "rm -rf public/docs/",
            "composer document",
            "cd public/docs; git add .; git commit -m 'Update Documentation ðŸ“’'; git push"
        ]
    },
    "config": {
        "platform": {
            "php": "7.1.3"
        },
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
